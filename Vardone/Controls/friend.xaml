<UserControl x:Class="Vardone.Controls.friend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vardone.Controls"
             Width="250" Height="50">
    <Grid>
        <Ellipse Cursor="Hand" VerticalAlignment="Top"
                          Width="30" Height="30" Margin="25,10,0,0"
                 HorizontalAlignment="Left">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Resources/avatar.jpg" />
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse Width="10" Height="10" Cursor="Hand" 
                         HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                         Margin="50,19,0,0"  Fill="LimeGreen">

        </Ellipse>
        <Label Content="User" Foreground="white"
               Margin="70,0,0,0" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
