<UserControl x:Class="Vardone.Controls.ItemControls.UserItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250" Height="50">
    <Grid x:Name="Grid" Cursor="Hand">
        <Ellipse x:Name="Ellipse" VerticalAlignment="Center"
                 Width="30" Height="30" Margin="30,0,0,0"
                 HorizontalAlignment="Left">
            <Ellipse.Fill>
                <ImageBrush Stretch="UniformToFill" x:Name="Avatar" />
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse Width="10" Height="10" Cursor="Hand"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="52,22,0,0"
                 Fill="LimeGreen" />
        <Label x:Name="Username" Content="User" 
               Foreground="white" 
               Width="160"
               FontSize="14"
               HorizontalAlignment="Left"
               Margin="70,0,0,0"
               VerticalAlignment="Center" />
    </Grid>
</UserControl>