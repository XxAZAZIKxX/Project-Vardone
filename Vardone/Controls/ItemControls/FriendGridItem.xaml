<UserControl x:Class="Vardone.Controls.ItemControls.FriendGridItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vardone.Controls"
             Width="250" Height="50">
    <Grid Cursor="Hand">
        <Ellipse x:Name="Ellipse" VerticalAlignment="Center"
                          Width="30" Height="30" Margin="30,0,0,0"
                 HorizontalAlignment="Left">
            <Ellipse.Fill>
                <ImageBrush Stretch="Uniform" x:Name="Avatar" />
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse Width="10" Height="10" Cursor="Hand" 
                         HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                         Margin="52,22,0,0"
                         Fill="LimeGreen">

        </Ellipse>
        <Label x:Name="Username" Content="User" Foreground="white" Width="160" 
               FontSize="14"
               HorizontalAlignment="Left"
               Margin="70,0,0,0" 
               VerticalAlignment="Center"/>
    </Grid>
</UserControl>
